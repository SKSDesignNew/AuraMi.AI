# Database (RDS PostgreSQL)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=aurami
DB_USER=aurami_admin
DB_PASSWORD=your-db-password
DB_SSL=true

# AWS S3 Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=aurami-family-assets

# Optional: CloudFront CDN URL for S3 assets
# CDN_URL=https://d1234567.cloudfront.net

# Authentication (NextAuth.js)
NEXTAUTH_URL=https://aurami.ai
NEXTAUTH_SECRET=generate-a-random-secret-here

# Cognito (optional â€” enable if using AWS Cognito)
# COGNITO_CLIENT_ID=your-cognito-client-id
# COGNITO_CLIENT_SECRET=your-cognito-client-secret
# COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_xxxxxx

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth (optional)
# APPLE_CLIENT_ID=your-apple-client-id
# APPLE_CLIENT_SECRET=your-apple-client-secret

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI (for embeddings only)
OPENAI_API_KEY=sk-...

# App
NEXT_PUBLIC_APP_URL=https://aurami.ai
